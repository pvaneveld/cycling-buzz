datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum CountryCode {
  NLD
  BEL
  ECU
  COL
  SVK
  GBR
  SVN
}

enum Medium {
  CYCLING_NEWS
}

model Article {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  published DateTime
  url       String
  headline  String
  medium    Medium
  cyclist   Cyclist  @relation(fields: [cyclistId], references: [id])
  cyclistId Int
}

model Cyclist {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  firstName   String
  lastName    String
  nationality CountryCode
  articles    Article[]
}
