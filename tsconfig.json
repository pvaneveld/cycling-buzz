{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist", // Types should go into this directory.
    "forceConsistentCasingInFileNames": true,
    "declaration": true // Generate d.ts files
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
